# Flowin Admin Panel Environment Variables

# Application
NEXT_PUBLIC_APP_NAME=Flowin Admin Panel
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Panel Administrasi Manajemen Air Flowin untuk PDAM Tirta Daroy

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database (if using direct database connection)
DATABASE_URL=postgresql://username:password@localhost:5432/flowin_admin

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Flowin Admin <noreply@flowin.com>

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# SCADA Integration
SCADA_API_URL=http://localhost:3002/api
SCADA_API_KEY=your-scada-api-key

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MOBILE_APP_BUILD=1

# Monitoring and Analytics
ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn

# Security
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# Feature Flags
ENABLE_MOBILE_APP=true
ENABLE_SCADA_INTEGRATION=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true

# Development
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug
